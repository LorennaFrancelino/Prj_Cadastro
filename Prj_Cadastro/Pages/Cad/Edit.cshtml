@page
@model Prj_Cadastro.Entities.Pessoa
@{
    ViewData["Title"] = "Edit";
}
<script type='text/javascript' src='https://code.jquery.com/jquery-1.11.0.js'></script>
<script type='text/javascript' src="https://rawgit.com/RobinHerbots/jquery.inputmask/3.x/dist/jquery.inputmask.bundle.js"></script>

<!-- Título da página -->
<div class="left">
    <h2>Edição de Registros</h2>
    <p></p>
</div>
<!-- Campos do formulário -->
@using (Html.BeginForm("Edit", "Cad", FormMethod.Post))
{
    <div class="form-group row">
        <div class="col-sm-2 control-label">
            @Html.LabelFor(model => Model.Nome, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-sm-4">
            @Html.EditorFor(model => Model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 control-label">
            @Html.LabelFor(model => Model.Sobrenome, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-sm-4">
            @Html.EditorFor(model => Model.Sobrenome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model.Sobrenome, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 control-label">
            @Html.LabelFor(model => Model.DtNascimento, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-sm-4">
            @Html.EditorFor(model => Model.DtNascimento, new { htmlAttributes = new { @class = "datepicker", data_tipo = "DtNascimento" } })
            @Html.ValidationMessageFor(model => Model.DtNascimento, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 control-label">
            @Html.LabelFor(model => Model.CPF, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-sm-4">
            @Html.EditorFor(model => Model.CPF, new { htmlAttributes = new { @class = "form-control", placeholder = "000.000.000-00", data_tipo = "cpf" } })
            @Html.ValidationMessageFor(model => Model.CPF, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 control-label">
            @Html.LabelFor(model => Model.Email, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-sm-4">
            @Html.EditorFor(model => Model.Email, new { htmlAttributes = new { @class = "form-control", data_tipo = "Email" } })
            @Html.ValidationMessageFor(model => Model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 control-label">
            @Html.LabelFor(model => Model.Celular, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-sm-4">
            @Html.EditorFor(model => Model.Celular, new { htmlAttributes = new { @class = "form-control", placeholder = "(00) 00000-0000", data_tipo = "Celular" } })
            @Html.ValidationMessageFor(model => Model.Celular, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 control-label">
            @Html.LabelFor(model => Model.Ocupacao, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-sm-4">
            @Html.EditorFor(model => Model.Ocupacao, new { htmlAttributes = new { @class = "form-control", data_tipo = "Ocupacao" } })
            @Html.ValidationMessageFor(model => Model.Ocupacao, "", new { @class = "text-danger" })
        </div>
    </div>
    <input type="submit" value="Confirm" class="btn btn-primary" />
    <!--</form>-->
}